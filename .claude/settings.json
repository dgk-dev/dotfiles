{
  "permissions": {
    "allow": [
      "WebSearch",
      "Bash(npx:*)",
      "Bash(pnpm:*)",
      "Bash(npm:*)",
      "Bash(uvx:*)",
      "Bash(uv:*)",
      "Bash(claude mcp:*)",
      "Bash(claude config)",
      "Bash(claude config list)",
      "Bash(cat:*)",
      "Bash(git:*)",
      "mcp__context7-mcp__*",
      "mcp__sequential-thinking__*",
      "mcp__memory-bank__*",
      "mcp__neon__*",
      "mcp__notion__*"
    ],
    "deny": [],
    "ask": [],
    "defaultMode": "plan"
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/telegram-notify.sh '✅' 'Claude task completed'"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/telegram-notify.sh '⏸️' 'Claude is waiting for input'"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); printf '\\033[34m%s\\033[0m \\033[32m❯\\033[0m' \"$(echo \"$input\" | jq -r '.workspace.current_dir')\"",
    "padding": 0
  },
  "enabledPlugins": {
    "rust-analyzer-lsp@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true,
  "autoUpdatesChannel": "stable",
  "language": "Korean"
}
